{
  "name": "ashley",
  "version": "1.3.1",
  "description": "A self-hosted discussion forum for learning",
  "scripts": {
    "build": "tsc --noEmit && webpack",
    "build-production": "tsc --noEmit && webpack --mode=production",
    "extract-translations": "formatjs extract './**/*.ts*' --ignore ./node_modules --ignore './**/*.d.ts' --out-file './i18n/frontend.json' --id-interpolation-pattern '[sha512:contenthash:base64:6]' --format crowdin",
    "compile-translations": "./i18n/compile-translations.js",
    "lint": "tslint -c tslint.json '**/*.ts?(x)' -e 'node_modules/**/*'",
    "lint-fix": "tslint --fix -c tslint.json '**/*.ts?(x)' -e 'node_modules/**/*'",
    "prettier": "prettier --list-different '**/*.+(ts|tsx|json|js|jsx)' '**/*.+(css|scss)' --ignore-path '../.prettierignore'",
    "prettier-write": "prettier --write '**/*.+(ts|tsx|json|js|jsx)' '**/*.+(css|scss)' --ignore-path '../.prettierignore'",
    "lint-all": "yarn lint-fix && yarn prettier-write",
    "sass": "node-sass --include-path node_modules scss/_main.scss ../ashley/static/ashley/css/main.css",
    "sass-production": "node-sass --include-path node_modules scss/_main.scss --output-style compressed ../ashley/static/ashley/css/main.css",
    "webfonts": "mkdir -p ../ashley/static/ashley/font/ ../ashley/static/ashley/css/fonts/ && cp -f ./node_modules/@fortawesome/fontawesome-free/webfonts/* ../ashley/static/ashley/font/ && cp -f ./node_modules/katex/dist/fonts/* ../ashley/static/ashley/css/fonts/",
    "test": "jest",
    "watch-sass": "nodemon -e scss -x 'yarn sass'"
  },
  "repository": "git@github.com:openfun/ashley.git",
  "author": "France Université Numérique",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-modules-commonjs": "7.26.3",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-typescript": "7.26.0",
    "@helpscout/helix": "0.2.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@types/draft-js": "0.11.18",
    "@types/emojione": "2.2.9",
    "@types/fetch-mock": "7.3.8",
    "@types/jest": "29.5.14",
    "@types/lodash-es": "4.17.12",
    "@types/react-autosuggest": "10.1.11",
    "@types/react-dom": "19.0.2",
    "@types/react-modal": "3.16.3",
    "babel-jest": "29.7.0",
    "babel-loader": "9.2.1",
    "babel-plugin-react-intl": "8.2.25",
    "babel-preset-react": "7.0.0-beta.3",
    "cljs-merge": "1.1.1",
    "css-loader": "7.1.2",
    "fetch-mock": "12.2.0",
    "file-loader": "6.2.0",
    "intl-pluralrules": "2.0.1",
    "jest": "29.7.0",
    "lodash-es": "4.17.21",
    "node-sass": "9.0.0",
    "nodemon": "3.1.9",
    "prettier": "3.4.2",
    "source-map-loader": "5.0.0",
    "style-loader": "4.0.0",
    "ts-jest": "29.2.5",
    "ts-mock-imports": "1.3.16",
    "tslint": "6.1.3",
    "typescript": "5.7.2",
    "webpack": "5.36.1",
    "webpack-cli": "6.0.1"
  },
  "dependencies": {
    "@draft-js-plugins/alignment": "5.0.4",
    "@draft-js-plugins/anchor": "4.2.1",
    "@draft-js-plugins/buttons": "4.3.3",
    "@draft-js-plugins/drag-n-drop": "4.2.3",
    "@draft-js-plugins/editor": "4.1.4",
    "@draft-js-plugins/focus": "4.1.5",
    "@draft-js-plugins/image": "4.1.4",
    "@draft-js-plugins/mention": "5.3.0",
    "@draft-js-plugins/resizeable": "5.0.4",
    "@draft-js-plugins/static-toolbar": "4.1.4",
    "@formatjs/cli": "6.3.14",
    "@formatjs/intl-relativetimeformat": "11.4.8",
    "@fortawesome/fontawesome-free": "6.7.2",
    "@testing-library/user-event": "14.5.2",
    "@types/katex": "0.16.7",
    "bootstrap": "4.6.0",
    "core-js": "3.39.0",
    "draft-js": "0.11.7",
    "draft-js-emoji-plugin": "2.1.3",
    "draft-js-latex-plugin": "0.1.2",
    "draft-js-mention-plugin": "3.1.5",
    "emojione": "4.5.0",
    "es6-shim": "0.35.8",
    "highlight.js": "11.11.0",
    "katex": "0.16.4",
    "mdn-polyfills": "5.20.0",
    "rc-tooltip": "6.3.2",
    "react": "19.0.0",
    "react-autosuggest": "10.1.0",
    "react-dom": "19.0.0",
    "react-intl": "7.0.4",
    "react-modal": "3.16.3",
    "regenerator-runtime": "0.14.1",
    "whatwg-fetch": "3.6.20"
  }
}
