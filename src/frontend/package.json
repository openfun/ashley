{
  "name": "ashley",
  "version": "0.0.1",
  "description": "A self-hosted alternative discussion forum for OpenEdx",
  "scripts": {
    "build": "tsc --noEmit && webpack",
    "build-dev": "yarn build",
    "build-production": "tsc --noEmit && webpack --mode=production",
    "generate-l10n-template": "rip json2pot 'i18n/**/*.json' -o i18n/frontend.pot",
    "generate-translations": "rip po2json './translations/*.po' -o './translations' -m './i18n/**/*.json'",
    "lint": "tslint -c tslint.json '**/*.ts?(x)' -e 'node_modules/**/*'",
    "lint-fix": "tslint --fix -c tslint.json '**/*.ts?(x)' -e 'node_modules/**/*'",
    "prettier": "prettier --list-different '**/*.+(ts|tsx|json|js|jsx)' --ignore-path '../.prettierignore'",
    "prettier-write": "prettier --write '**/*.+(ts|tsx|json|js|jsx)' --ignore-path '../.prettierignore'",
    "lint-all": "yarn lint-fix && yarn prettier-write",
    "sass": "node-sass --include-path node_modules scss/_main.scss ../ashley/static/ashley/css/main.css",
    "sass-production": "node-sass --include-path node_modules scss/_main.scss --output-style compressed ../ashley/static/ashley/css/main.css",
    "test": "jest",
    "watch-sass": "nodemon -e scss -x 'yarn sass'"
  },
  "repository": "git@github.com:openfun/ashley.git",
  "author": "France Université Numérique",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/polyfill": "7.8.7",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-typescript": "7.9.0",
    "@testing-library/react": "9.5.0",
    "@types/draft-js": "^0.10.38",
    "@types/jest": "25.1.4",
    "@types/react-dom": "^16.9.6",
    "babel-jest": "25.2.3",
    "babel-loader": "8.1.0",
    "babel-plugin-react-intl": "7.0.0",
    "babel-preset-react": "7.0.0-beta.3",
    "css-loader": "3.4.2",
    "jest": "25.2.3",
    "node-sass": "4.13.1",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "react-intl-po": "2.2.2",
    "source-map-loader": "0.2.4",
    "style-loader": "1.1.3",
    "ts-mock-imports": "1.3.0",
    "tslint": "5.20.1",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11"
  },
  "dependencies": {}
}
