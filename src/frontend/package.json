{
  "name": "ashley",
  "version": "1.1.2",
  "description": "A self-hosted discussion forum for learning",
  "scripts": {
    "build": "tsc --noEmit && webpack",
    "build-production": "tsc --noEmit && webpack --mode=production",
    "extract-translations": "formatjs extract './**/*.ts*' --ignore ./node_modules --ignore './**/*.d.ts' --out-file './i18n/frontend.json' --id-interpolation-pattern '[sha512:contenthash:base64:6]' --format crowdin",
    "compile-translations": "./i18n/compile-translations.js",
    "lint": "tslint -c tslint.json '**/*.ts?(x)' -e 'node_modules/**/*'",
    "lint-fix": "tslint --fix -c tslint.json '**/*.ts?(x)' -e 'node_modules/**/*'",
    "prettier": "prettier --list-different '**/*.+(ts|tsx|json|js|jsx)' '**/*.+(css|scss)' --ignore-path '../.prettierignore'",
    "prettier-write": "prettier --write '**/*.+(ts|tsx|json|js|jsx)' '**/*.+(css|scss)' --ignore-path '../.prettierignore'",
    "lint-all": "yarn lint-fix && yarn prettier-write",
    "sass": "node-sass --include-path node_modules scss/_main.scss ../ashley/static/ashley/css/main.css",
    "sass-production": "node-sass --include-path node_modules scss/_main.scss --output-style compressed ../ashley/static/ashley/css/main.css",
    "webfonts": "mkdir -p ../ashley/static/ashley/font/ && cp -f ./node_modules/@fortawesome/fontawesome-free/webfonts/* ../ashley/static/ashley/font/",
    "test": "jest",
    "watch-sass": "nodemon -e scss -x 'yarn sass'"
  },
  "repository": "git@github.com:openfun/ashley.git",
  "author": "France Université Numérique",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.13.16",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-modules-commonjs": "7.13.8",
    "@babel/preset-env": "7.13.15",
    "@babel/preset-typescript": "7.13.0",
    "@helpscout/helix": "0.1.2",
    "@testing-library/dom": "7.30.4",
    "@testing-library/jest-dom": "5.12.0",
    "@testing-library/react": "11.2.6",
    "@types/draft-js": "0.11.1",
    "@types/emojione": "2.2.6",
    "@types/fetch-mock": "7.3.3",
    "@types/jest": "26.0.23",
    "@types/lodash-es": "4.17.4",
    "@types/react-autosuggest": "10.1.4",
    "@types/react-dom": "17.0.3",
    "@types/react-modal": "3.12.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "babel-plugin-react-intl": "8.2.25",
    "babel-preset-react": "7.0.0-beta.3",
    "cljs-merge": "1.1.1",
    "css-loader": "5.2.4",
    "fetch-mock": "9.11.0",
    "intl-pluralrules": "1.2.2",
    "jest": "26.6.3",
    "lodash-es": "4.17.21",
    "node-sass": "6.0.0",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "source-map-loader": "2.0.1",
    "style-loader": "2.0.0",
    "ts-jest": "26.5.5",
    "ts-mock-imports": "1.3.4",
    "tslint": "6.1.3",
    "typescript": "4.2.4",
    "webpack": "5.36.1",
    "webpack-cli": "4.6.0"
  },
  "dependencies": {
    "@draft-js-plugins/alignment": "4.1.0",
    "@draft-js-plugins/anchor": "4.1.2",
    "@draft-js-plugins/buttons": "4.1.0",
    "@draft-js-plugins/drag-n-drop": "4.2.0",
    "@draft-js-plugins/editor": "4.1.0",
    "@draft-js-plugins/focus": "4.1.1",
    "@draft-js-plugins/image": "4.1.1",
    "@draft-js-plugins/mention": "4.4.1",
    "@draft-js-plugins/resizeable": "4.1.0",
    "@draft-js-plugins/static-toolbar": "4.1.0",
    "@formatjs/cli": "4.2.10",
    "@formatjs/intl-relativetimeformat": "8.1.6",
    "@fortawesome/fontawesome-free": "5.15.3",
    "@testing-library/user-event": "13.1.9",
    "bootstrap": "4.6.0",
    "core-js": "3.11.1",
    "draft-js": "0.11.7",
    "draft-js-code": "0.3.0",
    "draft-js-emoji-plugin": "2.1.3",
    "draft-js-mention-plugin": "3.1.5",
    "emojione": "4.5.0",
    "es6-shim": "0.35.6",
    "highlight.js": "10.7.2",
    "mdn-polyfills": "5.20.0",
    "react": "17.0.2",
    "react-autosuggest": "10.1.0",
    "react-dom": "17.0.2",
    "react-intl": "5.17.2",
    "react-modal": "3.13.1",
    "regenerator-runtime": "0.13.7",
    "whatwg-fetch": "3.6.2"
  }
}
